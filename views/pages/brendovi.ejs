<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.3.1/css/foundation.min.css">

<h1 class="display-4">Brendovi</h1>
<% flash.get('success').forEach(function (message) { %>
    <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong><%= message %></strong>
    </div>
<% }) %>
<form>
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
    </form>
    <button onclick="window.location.href='/brendovi/brendoviAdd'" class="btn btn-primary float-right ml-1">
        <i class="fa fa-plus"></i> Novi proizvod</button>
    <a href="/brendovi/csv">
        <input type="button"class="btn btn-primary float-right ml-1" value="CSV" /> 
    </a>
    <table id="example" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>#</th>
            <th class="th-sm">Naziv</th>
            <th>Datum nastanka</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            <% _.each(brendovi, function(brend) { %>
            <tr>
                <td><%= brend.id %></td>
                <td><%= brend.naziv %></td>
                <td><%= brend.datum_nastanka %></td>
                <td>
                    <a href="/brendovi/brendoviEdit/<%= brend.id %>" class="btn btn-primary">Uredi</a>
                    <form class="d-inline" action="/brendovi/delete/<%= brend.id %> " method="post" onclick="return confirm('Želite li obrisati brend')">
                        <input type="submit" class="btn btn-danger" value="Obriši">
                    </form>
                </td>
            </tr>
        <%}) %>
    </tbody>
</table>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>

<script type="text/javascript" src="https://cdn.datatables.net/buttons/1.3.1/js/dataTables.buttons.min.js"></script> 
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/buttons/1.3.1/js/buttons.html5.min.js"></script>



<script type="text/javascript">
    var table = $(document).ready(function() {
        $('#example').dataTable( {
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.19/i18n/Croatian.json"
            }
        } );
    } );
</script>
